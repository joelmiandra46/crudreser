{% extends "base.html.twig" %}

{% form_theme form _self %}

{% block body %}
    <div class="container" id="newres" style="width:500px;">
                
        <a href="{{ path('reservation_index') }}" class="btn btn-primary d-flex justify-content-center mt-4">
            revenir aux listes
        </a>
        <h1 class="mt-4">Creation d'une reservation</h1>
        {{ form_start(form) }}
        <div class="row">
            {{ form_row(form.client) }}
            {{ form_row(form.salle) }}
            <div class="col">
                {{ form_row(form.startDate) }}
            </div>
            <div class="col">
                {{ form_row(form.endDate) }}
            </div>
        </div>
        {{ form_widget(form) }}
        <!--h5>Montant Total : <span id="montant">...</span> Ar</!--h5-->
        <button type="submit" class="btn btn-dark mt-2">Créer une réservation</button>
        {{ form_end(form) }}
        
    </div>
{% endblock %}



