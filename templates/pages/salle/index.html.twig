{% extends 'base.html.twig' %}

{% block title %}symRes - Mes Salles{% endblock %}
    
{% block body %}
    <div class="container mt-4">

        <div class="table-responsive">
            <h1>Listes des salles</h1>
            <div class="container" style="width:500px">
                <a href="{{ path('salle_new') }}" class="btn btn-primary d-flex justify-content-center mt-4">
                    <i class="fas fa-plus mt-1 m-2 "> </i> 
                    créer un nouveau
                </a>
            </div>
            
            <div class="count mt-4 badge bg-dark">
                Total: {{ salles.getTotalItemCount }} salles.
                </div>
            <table class="table table-hover" style="margin-top: -5px">
                <thead>
                    <tr class="table-dark">
                    <th scope="col">Numero</th>
                    <th scope="col">Designation</th>
                    <th scope="col">Capacite</th>
                    <th scope="col">Caracteristique</th>
                    <th scope="col">Remarque</th>
                    <th scope="col"  width="100px">Etat</th>
                    <th scope="col">Frais</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Suppression</th>
                    </tr>
                </thead>
                <tbody>
                {% for salle in salles %}
                    <tr class="table-primary">
                        <th scope="row">{{salle.numero}}</th>
                        <td>{{salle.designation}}</td>
                        <td>{{salle.capacite}}</td>
                        <td>{{salle.caracteristique}}</td>
                        <td>{{salle.rmq}}</td>
                        <td>{{salle.etat}}</td>
                        <td width="100px">{{salle.frais}} Ar</td>
                        <td><a href="{{ path('salle_edit',{id: salle.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i> Modifier</a></td>
                        <td><a href="{{ path('salle_delete',{id: salle.id}) }}" class="btn btn-danger" onclick="return confirm('êtes-vous sûr de vouloir supprimer la salle {{ salle.designation }} de la liste ?')"><i class="fa fa-trash"></i> Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation d-flex justify-content-center mt-4 ">
                {{ knp_pagination_render(salles) }}
            </div>
        </div>

            
    </div>
{% endblock %}
